<section>
    {% for post in postslist | reverse | slice(0,3) %}
        <div{% if post.url == url %} data-current="current item"{% endif %} class="post_list">
            <a class="post" ">
                <div class="text_content">
                    <h2 href="{{ post.url | url }}>{{ post.data.title }}</h2>
                    <p style="margin-top:0">
                            {{ post.templateContent | striptags | truncateWords(25) }}
                    </p>
                </div>
                <div class="thumbnail">
                    <img class="post_thumbnail" src="{{ post.data.thumbnail | default('https://placehold.co/600x400') }}" alt="{{ post.data.title }}">
                </div>
            </a>
        </div>
    {% endfor %}
</section>





<style>

.post {
    display: flex;
    justify-content: space-between;  
    align-items: center;
    text-decoration: none; 
}
.post_list{
margin-bottom:10px;
}

.post_thumbnail {
    width: 120px;
  height: 67px; 
    object-fit: cover;
    border-radius: 5px;
}

.text_content {
    flex: 1;
    margin-right: 10px; 
    color: var(--text-color);
}

.post h2 {
    font-size: 18px;
    margin-bottom: 5px;
    border-bottom: 2px solid #d9534f;
    display: inline-block;
    font-family: "Instrument Serif";
    font-weight: normal;
    color: var(--text-color);
}

.post_content p {
    font-size: 14px;
}
</style>

<section class="book_section">
    <button class="scroll_btn left" onclick="scrollBooks(-1)">&#8592;</button> <!-- Left Arrow -->
    
    <div class="book_grid" id="bookContainer">
        {% for book in booklist | reverse %}
        <div class="book_item">
            <a href="{{ book.url | url }}" class="book_link">
                <img src="{{ book.data.thumbnail }}" alt="{{ book.data.title }}" class="book_thumbnail">
                <p class="book_title">{{ book.data.title }}</p>
            </a>
        </div>
        {% endfor %}
    </div>

    <button class="scroll_btn right" onclick="scrollBooks(1)">&#8594;</button> <!-- Right Arrow -->
</section>

<style>
.book_section {
    display: flex;
    align-items: center;
    gap: 10px;
    position: relative;
    max-width: 100%;
    overflow: hidden;
}

/* Book Grid */
.book_grid {
    display: flex;
    overflow-x: auto;
    scroll-behavior: smooth;
    gap: 10px;
    padding: 10px 0;
    white-space: nowrap;
    width: 100%;
    scroll-snap-type: x mandatory;
    scrollbar-width: none; /* Hide scrollbar for Firefox */
}

/* Hide scrollbar for Chrome, Safari */
.book_grid::-webkit-scrollbar {
    display: none;
}

/* Book Item */
.book_item {
    flex: 0 0 auto;
    width: 130px; /* Default size */
    text-align: center;
    scroll-snap-align: start;
}

/* Book Thumbnail */
.book_thumbnail {
    width: 130px;
    height: 200px;
    object-fit: cover;
    border-radius: 8px;
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
    transition: transform 0.2s ease-in-out;
}

.book_thumbnail:hover {
    transform: scale(1.05);
}

/* Book Title */
.book_title {
    margin-top: 8px;
    font-size: 1rem;
    font-weight: 600;
    text-align: center;
    max-width: 100%;
    white-space: normal; /* Allow multi-line text */
    word-wrap: break-word;
    overflow-wrap: break-word;
    line-height: 1.2; /* Improve readability */
}
  
/* Responsive Adjustments */
@media (max-width: 768px) {
    .book_title {
        font-size: 0.9rem;
        line-height: 1.1;
        padding: 0 5px; /* Add padding to prevent overlap */
    }
}


/* Scroll Buttons */
.scroll_btn {
    background: #222;
    color: white;
    border: none;
    padding: 10px 12px;
    font-size: 18px;
    cursor: pointer;
    border-radius: 50%;
    transition: background 0.2s ease-in-out;
    z-index: 10;
}

.scroll_btn:hover {
    background: #444;
}

/* Hide button when not needed */
.scroll_btn:disabled {
    opacity: 0.3;
    cursor: default;
}

/* Responsive Adjustments */
@media (max-width: 768px) {
    .book_item {
        width: 110px;
    }
    .book_thumbnail {
        width: 110px;
        height: 170px;
    }
    .book_title {
        font-size: 0.9rem;
    }
    .scroll_btn {
        padding: 8px 10px;
        font-size: 16px;
    }
}
</style>

<script>
const container = document.getElementById("bookContainer");

// Scroll Function
function scrollBooks(direction) {
    const scrollAmount = container.clientWidth * 0.8; // Scroll by 80% of container width
    container.scrollBy({ left: direction * scrollAmount, behavior: "smooth" });
}

// Touch & Swipe Support
let isDragging = false, startX, scrollLeft;

container.addEventListener("mousedown", (e) => {
    isDragging = true;
    startX = e.pageX - container.offsetLeft;
    scrollLeft = container.scrollLeft;
    container.style.cursor = "grabbing";
});

container.addEventListener("mouseleave", () => isDragging = false);
container.addEventListener("mouseup", () => {
    isDragging = false;
    container.style.cursor = "grab";
});

container.addEventListener("mousemove", (e) => {
    if (!isDragging) return;
    e.preventDefault();
    const x = e.pageX - container.offsetLeft;
    const walk = (x - startX) * 2; // Adjust speed
    container.scrollLeft = scrollLeft - walk;
});

// Touch Support for Mobile
container.addEventListener("touchstart", (e) => {
    startX = e.touches[0].pageX;
    scrollLeft = container.scrollLeft;
});

container.addEventListener("touchmove", (e) => {
    const x = e.touches[0].pageX;
    const move = x - startX;
    container.scrollLeft = scrollLeft - move;
});
</script>
